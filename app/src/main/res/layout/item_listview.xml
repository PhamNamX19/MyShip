<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/backgroud_button_fb_google_default"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HoangBinh"
                android:textColor="#53d3e2"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTimePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018:12:16"
                android:textColor="#a3a3a3"
                android:textSize="8sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvPost"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:textColor="#000000"
            android:text="Đây là bài đăng của người dùng" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:gravity="left"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btBinhLuan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_button_fb_google"
                android:drawableLeft="@drawable/icon_fb_black"
                android:paddingLeft="20dp"
                android:text="Bình Luận"
                android:textSize="10sp"
                android:textAllCaps="false"
                />

            <Button
                android:id="@+id/btCall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_button_fb_google"
                android:drawableLeft="@drawable/ic_phone_black"
                android:paddingLeft="20dp"
                android:text="Gọi"
                android:textAllCaps="false"
                android:textSize="10sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_button_fb_google"
                android:drawableLeft="@drawable/ic_hystory_black"
                android:paddingLeft="20dp"
                android:text="Lịch Sử"
                android:textAllCaps="false"
                android:textSize="10sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>